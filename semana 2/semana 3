using System;
using System.Collections.Generic; // Required for List<T>

namespace RegistroEstudiantes
{
    public class Estudiante
    {
        // Propiedades (Properties)
        public int Id { get; set; }
        public string Nombres { get; set; }
        public string Apellidos { get; set; }
        public string Direccion { get; set; }

        // Un array para almacenar los tres teléfonos
        public string[] Telefonos { get; set; }

        // Constructor para inicializar un nuevo estudiante
        public Estudiante(int id, string nombres, string apellidos, string direccion, string telefono1, string telefono2, string telefono3)
        {
            Id = id;
            Nombres = nombres;
            Apellidos = apellidos;
            Direccion = direccion;
            Telefonos = new string[3]; // Inicializa el array de 3 teléfonos
            Telefonos[0] = telefono1;
            Telefonos[1] = telefono2;
            Telefonos[2] = telefono3;
        }

        // Método para mostrar la información del estudiante (opcional, pero útil)
        public void MostrarInformacion()
        {
            Console.WriteLine($"ID: {Id}");
            Console.WriteLine($"Nombres: {Nombres}");
            Console.WriteLine($"Apellidos: {Apellidos}");
            Console.WriteLine($"Dirección: {Direccion}");
            Console.WriteLine($"Teléfonos: {Telefonos[0]}, {Telefonos[1]}, {Telefonos[2]}");
            Console.WriteLine("--------------------");
        }
    }
}
